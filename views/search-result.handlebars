<body>
  <div>
    <b><big>Found {{cardData.length}} results.</big></b> 
  </div>

  <div class="results-exp">Click on a card to view more details or click the 📋
    button to add it to your clipboard
  {{#if logged_in}}
    <span> or the 📁 button to add it to your collection.</span>
  {{/if}}
</div>

  

  <div class="columns is-flex-wrap-wrap card-search-container">
    {{#each cardData as |card|}}
      
      <a href="/search/{{sanitizeCardName card.name}}" class="card-container box">
      
        {{#if card.card_faces}}
          <img src="{{card.card_faces.[0].image_uris.normal}}" alt="{{card.name}}" />
          <img src="{{card.card_faces.[1].image_uris.normal}}" alt="{{card.name}}" class="card-face back" style="display: none;" />
        {{else}}
          <img src="{{card.image_uris.normal}}" />
        {{/if}}

        {{! Add to clipboard button }}
        <button
          class="add-to-clipboard-search"
          data-card-name="{{card.name}}"
        >📋</button>

        {{#if ../logged_in}}
          <button class="add-to-collection-search" card-id="{{card.id}}" card-name="{{card.name}}"
          >📁</button>
        {{/if}}
      </a>
    {{/each}}
  </div>
  
</body>
