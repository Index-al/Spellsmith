<html lang="en">

  <head>
    {{!-- Basic Header Info --}}
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Spellsmith - Your Deck Building Companion</title>
    <meta name="description" content="Spellsmith helps you build, manage, and visualize Magic: The Gathering decks with ease.">
    <link rel="icon" href="/assets/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon" />

    <!-- Open Graph / Facebook Meta Tags -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://spell-smith.com/">
    <meta property="og:title" content="Spellsmith - Your Deck Building Companion">
    <meta property="og:description" content="Spellsmith helps you build, manage, and visualize Magic: The Gathering decks with ease.">
    <meta property="og:image" content="https://spell-smith.com/assets/SpellSmithtext.png">

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:url" content="https://spell-smith.com/">
    <meta name="twitter:title" content="Spellsmith - Your Deck Building Companion">
    <meta name="twitter:description" content="Spellsmith helps you build, manage, and visualize Magic: The Gathering decks with ease.">
    <meta name="twitter:image" content="https://spell-smith.com/assets/SpellSmithtext.png">

    {{!-- Stylesheet stuff --}}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/js/sweet-alert.js"></script>

  </head>

  <body>
    <header>
      {{! Title of the site }}
      <div class="container">
        <div class="columns">

          <div class="column is-offset-1 is-4 title-container">
            <a href="/">
              <img
                src="/assets/SpellSmith.png"
                alt="Spell Smith Logo"
                id="brand-logo"
                class="brand-logo is-hidden-touch"
              />
            </a>

            <h1 class="title"><a
                href="/"
                class="brand-text is-size-3-mobile"
              >SPELLSMITH</a></h1>
          </div>
          <div class="column is-offset-2 is-5 is-8-mobile">
            {{#unless hide_search}}
              {{! Search bar for everywhere but homepage }}
              <div class="small-search-container">
                <form class="field has-addons search-form">
                  <div class="control is-expanded">
                    <input
                      class="input is-small search-input"
                      id="small-search-input"
                      type="text"
                      placeholder="Search for cards.."
                    />
                  </div>
                  <div class="control">
                    <button
                      class="button is-small is-info search-button"
                      id="small-search-button"
                    >
                      Search
                    </button>
                  </div>
                </form>
              </div>
            {{/unless}}
          </div>
        </div>

        {{!-- Navigation menu --}}

        <div class="columns nav-menu">
          <div class="column has-text-right nav-buttons">
            <nav class="columns">
              {{#if logged_in}}
                <div class = "column is-offset-6">
                  <a href="/deck-builder" class="nav-item has-text-white">
                  Deckbuilder</a>
                </div>
                <div class="column">
                  <a href="/collection" class="nav-item has-text-white">
                  Collection</a>
                </div>
                <div class="column">
                  <a href="/account" class="nav-item has-text-white">Account</a>
                </div>

                <div class="column">
                  <button
                    id="logout"
                    class="nav-item button is-white"
                  >Logout</button>
                </div>

              {{else}}
                {{! Show Login button }}
                <div class="column is-offset-10">
                  <div class="field has-addons nav-item">
                    <div class="control">
                      <a href="/login" class="button" id="login">Login</a>
                    </div>
                  </div>
                </div>

              {{/if}}
            </nav>
          </div>

        </div>

      </div>
    </header>

    {{! MAIN PAGE CONTENT }}
    <main>
      <div class="container">
        {{{body}}}
      </div>
    </main>

    <!-- Clipboard Bar HTML structure -->
    <div id="clipboard-bar" class="clipboard">
      <div class="clipboard-header">
        <span
          id="clear-clipboard"
          class="clear-clipboard"
          onclick="clearAllClipboard(event)"
        ></span>
        <span id="copy-clipboard" class="copy-clipboard"></span>
        <span id="buy-clipboard" class="buy-clipboard"></span>
        <span id="clipboard-info" class="clipboard-info"></span>
        <div id="info-extended" class="info-extended"></div>
        ✏️ My Card Clipboard
        <span id="clipboard-arrow" class="clipboard-arrow">↑</span>
      </div>
      <div class="clipboard-content">
        <!-- Clipboard items will be dynamically inserted here -->
      </div>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
      <script src="/js/savecard.js"></script>
      <script src="/js/remove.js"></script>
    {{/if}}
    <script src="/js/search.js"></script>
    <script src="/js/clipboard.js"></script>
  </body>

</html>